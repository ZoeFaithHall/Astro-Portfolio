    </div>
  </div>
</section>
<section class="border-b border-eagle/20 bg-accent-500">
  <div
    class="mx-auto max-w-7xl border-eagle/20 border-x"
    x-data="{ init() {
            new Splide(this.$refs.splide, {
                type: 'loop',
                drag: true,
                perPage: 3,
                gap: '0rem',
                breakpoints: {
                    620: {
                        perPage: 1,
                    },
                    992: {
                        perPage: 2,
                    },
                },
            }).mount()
        },
    }">
    <section
      class="splide"
      aria-label="Project carousel"
      x-ref="splide"
      id="splide01"
      aria-roledescription="carousel">
      <div class="splide__track">
        <ul class="splide__list">
          {slides.map((slide) => (
            <li class="splide__slide relative group">
              <img src={slide.imgSrc} alt={slide.altText} class="w-full h-auto" />
              <div class="absolute inset-0 bg-black bg-opacity-80 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-start justify-start text-white p-4">
                <span class="py-2 px-5 text-white">
                  <h3 class="font-display text-lg pb-2 uppercase">{slide.title}</h3>
                  <div class="z-10 sm:col-span-6">
