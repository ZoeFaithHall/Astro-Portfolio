---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ADHDRoutineBuilder from "@/components/artifacts/ADHDRoutineBuilder.jsx";
---

<html>
    <BaseLayout>
        <section class="border-eagle/20 border-b">
            <div class="mx-auto border-eagle/20 border-x max-w-7xl">
                <!-- Back link + header -->
                <div class="px-8 pt-8 pb-4">
                    <a
                        href="/#artifacts"
                        class="text-eagle text-xs font-display uppercase tracking-wider hover:text-lime transition-colors duration-200 inline-flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 20 20"
                            fill="currentColor"
                            class="w-3 h-3"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M17 10a.75.75 0 01-.75.75H5.612l4.158 3.96a.75.75 0 11-1.04 1.08l-5.5-5.25a.75.75 0 010-1.08l5.5-5.25a.75.75 0 111.04 1.08L5.612 9.25H16.25A.75.75 0 0117 10z"
                                clip-rule="evenodd"></path>
                        </svg>
                        Back to Portfolio
                    </a>
                </div>

                <div class="px-8 pb-6">
                    <div class="flex items-center gap-3 mb-2">
                        <span
                            class="text-lime text-xs font-display uppercase tracking-wider"
                            >AI Artifact</span
                        >
                        <span class="text-eagle/30">·</span>
                        <span class="text-eagle/50 text-xs"
                            >React · Claude Code</span
                        >
                    </div>
                    <h1
                        class="font-display text-white text-2xl md:text-3xl lg:text-4xl uppercase leading-tight"
                    >
                        ADHD Daily Routine Builder
                    </h1>
                    <p class="text-eagle text-sm mt-3 max-w-2xl">
                        Answer a few questions about your work setup, energy
                        patterns, and biggest challenges. Get a personalized
                        daily routine with rules, emergency protocols, and a
                        desktop install guide.
                    </p>
                </div>
            </div>
        </section>

        <!-- React component with client:load for full interactivity -->
        <ADHDRoutineBuilder client:load />
    </BaseLayout>
</html>
